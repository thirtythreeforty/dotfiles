source ~/.vim/config/base.vim
source ~/.vim/config/mappings.vim
source ~/.vim/config/autocmd.vim

" Support for vim-surround commands
set surround
let mapleader = ","

" Bind AceJump to s (like sneak for real Vim)
nmap s :action AceAction<CR>

" I have zero clue what these do by default but they suck.
nnoremap <C-O> :action Back<CR>
nnoremap <C-I> :action Forward<CR>
inoremap <C-S-J> <C-o>:action InsertLiveTemplate<CR>
nnoremap <S-J> :action EditorJoinLines<CR>
