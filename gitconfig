[user]
	email = thirtythreeforty@gmail.com
	name = George Hilliard
[alias]
	unstage = reset HEAD --
	visual = !gitk --all
	vis = !gitk --all
	ours   = "!f() { git checkout --ours ${@} && git add ${@}; }; f"
	theirs = "!f() { git checkout --theirs ${@} && git add ${@}; }; f"
	st = status
	co = checkout
	ci = commit
	ds = diff --staged
	sm = submodule
	rset = reset
	lg = log --graph --pretty=format:'%Cgreen%h%Creset -%C(bold yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --all
	hlg = "!f() { git lg ${@} | head -n20; }; f"
	amend = commit --amend -C HEAD
	amen = !echo 'git: Amen, brother.\n\nDid you mean this?\n    amend'
	ignore = "!f() { curl https://www.gitignore.io/api/$@ ;}; f >> .gitignore"
	undo-merge = reset --merge HEAD@{1}
	makethis = "!f() { git branch -f $@ $(git rev-parse HEAD); git checkout $@; }; f"
[diff]
	algorithm = patience
	tool = xxdiff
	compactionHeuristic = true
[color]
	ui = true
[gui]
	historybrowser = gitk
[pull]
	ff = only
[merge]
	ff = false
[push]
	default = simple
[fetch]
	prune = true
[core]
	excludesfile = ~/.gitignore_global
	pager = less -x1,5
[rerere]
	enabled = true
[init]
	templatedir = ~/.git_template
[include]
	path = .gitconfig_local
