[user]
	email = thirtythreeforty@gmail.com
	name = George Hilliard
[alias]
	unstage = reset HEAD --
	visual = !gitk --all
	ours   = "!f() { git checkout --ours $@ && git add $@; }; f"
	theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
	st = status
	co = checkout
	ci = commit
	ds = diff --staged
	sm = submodule
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(bold yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --all
	amend = commit --amend -C HEAD
	amen = !echo 'git: Amen, brother.\n\nDid you mean this?\n    amend'
	ignore = "!f() { curl http://www.gitignore.io/api/$@ ;}; f >> .gitignore"
	undo-merge = reset --merge HEAD@{1}
	makethis = "!git branch -f $@ $(git rev-parse HEAD)"
[diff]
	algorithm = patience
	tool = xxdiff
[color]
	ui = true
[gui]
	historybrowser = gitk
[push]
	default = simple
[fetch]
	prune = true
[core]
	excludesfile = ~/.gitignore_global
	pager = less -x1,5
[rerere]
	enabled = true
[init]
	templatedir = ~/.git_template
[include]
	path = .gitconfig_local
